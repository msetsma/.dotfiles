theme = Catppuccin Macchiato
window-decoration = true
font-size = 14
confirm-close-surface = false
background-opacity = .9
background-blur = 20

# Add padding around the terminal content (in pixels)
window-padding-x = 0
window-padding-y = 0


# Global keybinding to summon a temp terminal
# https://ghostty.org/docs/config/reference#quick-terminal-size
quick-terminal-screen = main
quick-terminal-size = 1000px,700px
quick-terminal-animation-duration = .02
quick-terminal-position = center
quick-terminal-space-behavior = remain

# Keybinds
keybind = global:cmd+grave_accent=toggle_quick_terminal
keybind = shift+enter=text:\x1b\r